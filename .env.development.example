NODE_ENV=development
HOST=127.0.0.1
PORT=4310

# Optional: set for non-loopback host access control
API_TOKEN=
REQUIRE_API_TOKEN_FOR_LOOPBACK=false

# Prefer local-only origins in development
ALLOWED_ORIGINS_DEV=http://127.0.0.1:4310,http://localhost:4310

# Optional global override (takes precedence over *_DEV/STAGE/PROD)
# ALLOWED_ORIGINS=http://127.0.0.1:4310,http://localhost:4310

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=240
WS_RATE_LIMIT_WINDOW_MS=60000
WS_RATE_LIMIT_MAX_MESSAGES=400

# Optional: if set, startup commands must match one of these prefixes.
# COMMAND_ALLOWLIST=codex,claude,gemini
# Optional: required to run dangerous command patterns (e.g. --dangerously-*)
# COMMAND_APPROVAL_TOKEN=replace-with-strong-token

PERSIST_COMMAND_IN_WORKSET=false
PERSIST_ENV_IN_WORKSET=false
MASK_SENSITIVE_ENV_VALUES=true

MAX_PTYS=4
BUFFER_SIZE=120000
AUTO_RESTART_DELAY_MS=1500
TELEMETRY_ENABLED=false
