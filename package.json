{
  "name": "vibe-terminal-layout-system",
  "version": "1.0.3",
  "private": true,
  "main": "src/main/main.js",
  "scripts": {
    "electron:start": "electron .",
    "rebuild:native": "electron-builder install-app-deps",
    "package": "electron-builder --win portable",
    "package:installer": "electron-builder --win nsis",
    "package:dir": "electron-builder --win dir",
    "package:mac": "electron-builder --mac dmg",
    "package:mac:dir": "electron-builder --mac dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "electron": "^30.0.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.vibe-terminal.app",
    "productName": "Vibe Terminal",
    "asar": true,
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/app-icon.ico"
    },
    "mac": {
      "icon": "assets/app-icon-mac.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "extraResources": [
      {
        "from": "AGENTS.md",
        "to": "AGENTS.md"
      }
    ],
    "asarUnpack": [
      "node_modules/node-pty/**"
    ],
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.${ext}"
    }
  }
}
